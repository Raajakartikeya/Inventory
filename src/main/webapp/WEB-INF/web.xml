<web-app>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendorServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.VendorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.PurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.InvoiceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.StockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PriceListServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.PriceListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.example.inventory.servlet.ReportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendorServlet</servlet-name>
        <url-pattern>/vendors/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/items/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/purchases/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceServlet</servlet-name>
        <url-pattern>/invoices/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payments/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/stocks/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PriceListServlet</servlet-name>
        <url-pattern>/prices/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/reports/*</url-pattern>
    </servlet-mapping>
</web-app>
